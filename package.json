{
  "private": true,
  "scripts": {
    "bootstrap":
      "lerna bootstrap && lerna run build --scope botfuel-dialog && lerna link --force-local",
    "clean": "lerna clean && rm -r node_modules",
    "type-check": "yarn flow",
    "style": "lerna run style",
    "pretest": "yarn run bootstrap && yarn run train",
    "release":
      "yarn test && lerna run build --scope botfuel-dialog && lerna publish --conventional-commits --changelog-preset=angular",
    "unit-test": "BOTFUEL_APP_TOKEN=TEST_BOT jest packages/botfuel-dialog",
    "test": "jest --forceExit",
    "train": "lerna run train",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": ["prettier-eslint --write \"{src,tests}/**/*.js\"", "git add"]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^21.2.0",
    "babel-plugin-transform-builtin-extend": "^1.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-2": "^6.24.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.4.2",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-mocha": "^4.11.0",
    "eslint-plugin-node": "^5.1.0",
    "eslint-plugin-react": "^7.1.0",
    "flow-bin": "^0.69.0",
    "flow-typed": "^2.4.0",
    "husky": "^0.14.3",
    "istanbul-api": "^1.2.1",
    "istanbul-lib-coverage": "^1.1.1",
    "jest": "^21.2.1",
    "lerna": "^3.0.0-alpha.1",
    "lint-staged": "^6.1.0",
    "prettier": "^1.10.2",
    "prettier-eslint": "^8.8.1",
    "prettier-eslint-cli": "^4.7.0",
    "replay": "^2.1.4"
  },
  "workspaces": ["packages/*"]
}
